<% content_for :title, 'ベンチャー企業一覧' %>
<h1 class="text-center">成長<small>してる</small>ベンチャー<small>一覧</small></h1>
<%= row_tag do %>
  <% @services.each do |service| %>
    <%= grid_tag 4 do %>
      <%= panel_tag service.name, 'info' do %>
        <%= link_to service.web_url, target: '_blank' do %>
          <dl>
            <dt>サービス概要</dt>
            <dd class="mb-20">なんかペットに自動的に餌をあげますよ。<br />画期的ですね</dd>
            <dt>会社概要</dt>
            <dd class="mb-20">Fox.inc アメリカのカリフォルニア州のスタートアップ</dd>
            <dt>投資額</dt>
            <dd><%= service.funding || '???' %></dd>
          </dl>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
